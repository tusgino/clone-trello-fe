{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Handle paths in tsconfig.json
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  // Include all files in src and declarations.d.ts
  // Vietnamese: Bao gồm tất cả các file trong thư mục src và declarations.d.ts
  "include": ["src", "./declarations.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
